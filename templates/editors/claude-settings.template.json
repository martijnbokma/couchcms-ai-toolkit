{
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(bun run *)",
      "Bash(yarn *)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git pull)",
      "Bash(git push)",
      "Read(~/.config/**)",
      "Read(./node_modules/**)",
      "Read(./vendor/**)",
      {{#if paths.src}}
      "Read({{paths.src}}/**)",
      "Write({{paths.src}}/**)",
      {{/if}}
      {{#if paths.tests}}
      "Read({{paths.tests}}/**)",
      "Write({{paths.tests}}/**)",
      {{/if}}
      {{#if paths.docs}}
      "Read({{paths.docs}}/**)",
      "Write({{paths.docs}}/**)",
      {{/if}}
      "Read(./**/*.md)",
      "Write(./**/*.md)",
      "Read(./**/*.json)",
      "Write(./**/*.json)",
      "Read(./**/*.js)",
      "Write(./**/*.js)",
      "Read(./**/*.ts)",
      "Write(./**/*.ts)",
      "Read(./**/*.php)",
      "Write(./**/*.php)",
      "Read(./**/*.css)",
      "Write(./**/*.css)",
      "Read(./**/*.html)",
      "Write(./**/*.html)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.key)",
      "Read(./**/*.pem)",
      "Read(./**/*.p12)",
      "Read(./**/*.pfx)",
      "Read(./**/*-key.pem)",
      "Read(./**/*-cert.pem)",
      "Read(./config/secrets/**)",
      "Read(./.aws/**)",
      "Read(./.ssh/**)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(chown *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(fdisk *)"
    ]
  },
  "env": {
    "NODE_ENV": "development",
    "PROJECT_NAME": "{{project.name}}",
    "PROJECT_TYPE": "{{project.type}}"
  },
  "slashCommands": {
    "sync": {
      "description": "Sync AI toolkit configurations",
      "command": "bun run sync"
    },
    "validate": {
      "description": "Validate project configuration",
      "command": "bun run validate"
    },
    "test": {
      "description": "Run project tests",
      "command": "bun test"
    }
  }
}
